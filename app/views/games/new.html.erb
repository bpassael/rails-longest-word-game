<h1 class="m-3">New Game</h1>

<div class="container">
  <div class="row">
    <% @letters.each do |letter| %>
      <p class="col-1 m-3 btn btn-primary w-auto"><%= letter.capitalize %></p>
    <% end %>
  </div>

  <div class="row">
    <form action="/score" method="post" data-turbo="false">
      <div class="form-group">
        <label for="inputword" class="ml-4">What is the longest word you can find?</label>
        <input id="inputword" type="text" name="guessedword">
        <input type="submit">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :value, @letters %>
      <%= hidden_field_tag :start_time, @start_time %>
    </form>
  </div>
</div>
